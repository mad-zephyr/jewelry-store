extends ../base.pug

block variables
	- var template = 'home'

block content
	.home
		.home__wrapper
			.home__titles
				each collection, index in collections
					.home__titles__label=`${home.data.collection} ${Numbers(index)}`
					.home__titles__title=collection.data.title
			.home__gallery
				each media in home.data.gallery
					figure.home__gallery__media
						img.home__gallery__media(alt=media.image.alt src=media.image.url)

			a.home__link(href=Link(home.data.collections))=home.data.button
				svg.home__link__icon(version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 288 60")
					path(stroke="currentColor" fill="none" d="M144,60c-38.4,0-74.4-3.1-101.6-8.7C15.1,45.7,0,38.1,0,30S15.1,14.3,42.4,8.7C69.6,3.1,105.6,0,144,0 s74.4,3.1,101.6,8.7C272.9,14.3,288,21.9,288,30s-15.1,15.7-42.4,21.3C218.4,56.9,182.4,60,144,60z")
